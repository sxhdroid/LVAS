<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="100dp">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/video_info_bg"
        android:id="@+id/item_cache_activity_iv"
        android:layout_width="200dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_cache_activity_tv_videoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/video_name"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/item_cache_activity_tv_videtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:text="TextView"/>

        <TextView
            android:id="@+id/item_cache_activity_tv_videosize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/video_size"
            android:textColor="#000000"
            android:textSize="12dp"/>

    </LinearLayout>

</LinearLayout>